<%= form_with model:@article, url: articles_path, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form">
    <%= f.text_field :title, autofocus: true, placeholder: "タイトル", class: "form-content" %>
  </div>
  <div class="form">
    <%= f.text_area :content, autofocus: true, placeholder: "内容", rows: 4, class: "form-content" %>
  </div>
  <div class="form">
    <%= f.submit '投稿' %>
  </div>
<% end %>